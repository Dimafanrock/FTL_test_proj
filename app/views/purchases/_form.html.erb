<%= form_for @purchase do |f| %>
 
  <p>
    <%= f.label :category_name %>
    <%= f.text_field :category_name %>    
  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :buy_at %>
    <%= f.date_field :buy_at %>    
  </p>

  <p>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit 'Save' %> 
  </p>

<% end %>